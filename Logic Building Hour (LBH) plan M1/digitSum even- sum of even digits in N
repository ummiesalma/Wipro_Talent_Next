#include<stdio.h>
#include<string.h>

int EvenDigitsSum(int input1) {
    int sum = 0;
    
    while (input1 > 0) {
        int digit = input1 % 10;  // Get last digit
        if (digit % 2 == 0) {     // Check if even
            sum += digit;         // Add to sum if even
        }
        input1 /= 10;             // Remove last digit
    }
    
    return sum;
}